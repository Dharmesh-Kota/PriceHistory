<link rel="stylesheet" href="/css/nav.css" >

<nav class="navbar navbar-expand-lg shadow-lg nav-bg">
  <div class="container-fluid">
    <a class="navbar-brand text-light-default" href="/">
      <img
        src="/images/index.jpg"
        alt="Logo"
        width="30"
        height="24"
        class="d-inline-block align-text-top mx-3 rounded-1"
      />Price History</a
    >
    <button
      class="navbar-toggler text-light-default"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a
            class="nav-link active text-light-default"
            aria-current="page"
            href="/users"
            >Users</a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link text-light-default" href="/products">Products</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-light-default" href="/queries">Queries</a>
        </li>
      </ul>
      <button
        class="btn btn-link text-light-default theme-toggle"
        id="theme-toggle"
      >
        <i class="fas fa-sun"></i>
      </button>
    </div>
  </div>
</nav>

<script>
  const themeToggle = document.querySelector(".theme-toggle");
  themeToggle.addEventListener("click", () => {
    document.body.classList.toggle("light-mode");
    themeToggle.innerHTML = document.body.classList.contains("light-mode")
      ? `<i class="fas fa-moon"></i>`
      : `<i class="fas fa-sun"></i>`;
  });
  if(document.body.classList.contains("light-mode")){
    themeToggle.innerHTML = `<i class="fas fa-moon"></i>`;
  } else {
    themeToggle.innerHTML = `<i class="fas fa-sun"></i>`;
  }
</script>
